{% extends "main.twig" %}
{# THIS IS A TWIG COMMENT
	the line above MUST be the first line in a template, It essentially says to use this template "base.twig" as of the main structure of my page and this current page "index.twig" is going to fill the blocks established in the main structure
#}
{% block page_title %}Home - {% endblock %}
{% block main_content %}
    {# The content in here will replace the content block found inside of "base.twig" #}
    <div class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="carousel slide" data-ride="carousel" id="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active"><img class="d-block img-fluid w-100" src="assets/apple-imac-04.jpg">
                            </div>
                            <div class="carousel-item"><img class="d-block img-fluid w-100" src="assets/apple-imac-05.jpg">
                            </div>
                            <div class="carousel-item"><img class="d-block img-fluid w-100" src="assets/apple-imac-06.jpg">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev"> <span class="carousel-control-prev-icon"></span> <span class="sr-only">Previous</span> </a> <a class="carousel-control-next" href="#carousel" role="button" data-slide="next"> <span
                                    class="carousel-control-next-icon"></span> <span class="sr-only">Next</span> </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="py-5">
        <div class="container">
            <div class="row">
                {% for subject in subjects %}
                    <div class="col-md-3">
                        <div class="card"><img class="card-img-top" src="{{ subject.subPicPath }}" alt="Card image cap" id="{{ subject.subName }}">
                            <div class="card-body">
                                <h4 class="card-title">{{ subject.subName }} Quiz</h4>
                                <a href="quiz.php?subject={{ subject.subName }}&page=1" class="btn btn-primary {% if( isTeacherLogin) %}  disabled  {% endif %}">Start</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="#PHP">Prev</a></li>
                        <li class="page-item active"><a class="page-link" href="#PHP">1</a></li>
                        <li class="page-item"><a class="page-link" href="#CSS">Next</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
