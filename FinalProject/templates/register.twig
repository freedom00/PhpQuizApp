{% extends "main.twig" %}
{# THIS IS A TWIG COMMENT
	the line above MUST be the first line in a template, It essentially says to use this template "base.twig" as of the main structure of my page and this current page "index.twig" is going to fill the blocks established in the main structure
#}
{% block page_title %}Register - {% endblock %}
{% block main_content %}
    {# The content in here will replace the content block found inside of "base.twig" #}
    <div class="py-5 text-center" id="bg_question">
        <div class="container">
            <div class="row">
                <div class="mx-auto col-lg-6 col-10 bg-white  p-5">
                    <h1 class="">Register</h1>
                    {% if errorMessage != "" %}
                    <div class="alert alert-primary" role="alert">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        <h4 class="alert-heading">Important Information!</h4>
                        <p class="mb-0">{{errorMessage}}</p>
                    </div>
                    {% endif %}
                    <form class="text-left" method="post">
                        <div class="form-group"><label for="form16">Your Name</label> <input type="text" class="form-control" id="form16" name="inputName" placeholder="Johann W. Goethe"></div>
                        <div class="form-group"><label for="form18">Your email</label> <input type="email" class="form-control" id="form18" name="inputEmail" placeholder="j.goethe@werther.com"></div>
                        <div class="form-row">
                            <div class="form-group col-md-6"><label for="form19">Password</label> <input type="password" class="form-control" id="form19" name="inputPassword" placeholder="••••"></div>
                            <div class="form-group col-md-6"><label for="form20">Confirm Password</label> <input type="password" class="form-control" id="form20" name="inputConfirmPassword" placeholder="••••"></div>
                        </div>
                        <button type="submit" class="btn btn-primary">Register<br></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="">
        <div class="container-fluid">
            <div class="row">
                <div class="p-0 col-12"></div>
            </div>
        </div>
    </div>
{% endblock %}