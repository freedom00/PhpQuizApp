{% block page_title %}List of Users - {% endblock %}
{% block main_content %}
    {# The content in here will replace the content block found inside of "base.twig" #}
    <div class="py-5 text-center" id="bg_question">
        <div class="container bg-white">
            <div class="row mt-4">
                <div class="col-12">
                    <h2>List All Users</h2>
                </div>
                <div class="table-responsive col-12">
                    <table class="table table-hover table-striped table-bordered">
                        <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>Position</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for student in students %}
                            <tr>
                                <td>{{ student.stuId }}</td>
                                <td>{{ student.stuName }}</td>
                                <td>{{ student.stdEmail }}</td>
                                <td>{{ student.stuPassword }}</td>
                                <td>Student</td>
                                <td>
                                    <!-- <a href="user_edit.php?id=<?=$row['id'];?>&mode=edit">Edit</a> |
                                        <a href="user_edit.php?id=<?=$row['id'];?>&mode=delete">Delete</a> -->
                                    <a href="user.php?id={{ student.stuId }}&mode=edit">Edit</a> |
                                    <a href="user.php?id={{ student.stuId }}&mode=delete">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                        {% for teacher in teachers %}
                            <tr>
                                <td>{{ teacher.tchId }}</td>
                                <td>{{ teacher.tchName }}</td>
                                <td>{{ teacher.tchEmail }}</td>
                                <td>{{ teacher.tchPassword }}</td>
                                <td>Teacher</td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12"><a class="btn btn-outline-primary" href="#">Print&nbsp;<i class="fa fa-fw fa-print"></i> </a></div>
        </div>
    </div>
    </div>
{% endblock %}