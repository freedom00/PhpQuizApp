{% block page_title %}Question Edit - {% endblock %}
{% block main_content %}
    {# The content in here will replace the content block found inside of "base.twig" #}
    <div class="py-5 text-center" style=" background-image: url(&quot;assets/cover-bubble-dark.svg&quot;);	background-position: top left;	background-size: cover;	background-repeat: repeat;">
        <div class="container bg-white">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="">Question</h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-md-center">
                <div class="col-md-12">
                     <div class="col-sm-12 col-md-8 offset-md-2">
            <form action="" method="POST">
              <div class="form-group">
                <label>Question</label>
                  <textarea class="form-control" rows="2" name="question" value={{ question_editing.quName }}>{{ question_editing.quName }}</textarea>              
              </div>                
               <div class="form-group">
                <label>Options</label>
                {% for option_editing in options_editing  %}
                <textarea class="form-control" rows="1" name ="option{{loop.index}}" value={{ option_editing.quOption }}>{{ option_editing.quOption }}</textarea><br>
                {% endfor  %}
              </div>
                <div class="form-group">
                <label>Answer</label>
                <textarea class="form-control" rows="1" name="answer"  value={{ answer_editing.quOption }}>{{ answer_editing.quOption }}</textarea>
              </div>
              <div class="form-group">
              <label>Type</label>
              <select class="form-control " name="type" value={{ question_editing.quType }}>
                <option disabled selected value > -- select Single or Multiple Choice(s) -- </option>
                <option value="sgl">Single Choice</option>
                <option value="mul">Multiple Choices</option>
              </select>
              </div>
                <div class="form-group">
                <label>Subject</label>
                <select class="form-control " name="subject" value={{ question_editng.subName }}>
                <option disabled selected value> -- select an Subject -- </option>
              
               {% for subject in subjects %}                                
                  <option value={{ subject.subName }}
                    {% if mode=="edit" %} 
                    {% if subject.subName==question_editing.subName %} 
                       'selected="selected"'
                    {% endif %} 
                    {% endif %} >
                       {{ subject.subName }} </option>
                 {% endfor %}              
                </select>
              </div>
              <input type="hidden" name="id" value={{ question_edit.quId }}>
              <button type="submit" class="btn btn-primary" name="btnSubmit">Submit</button>
            </form>

                </div>
            </div>
        </div>
    </div>
{% endblock %}