{% extends "main.twig" %}
{# THIS IS A TWIG COMMENT
	the line above MUST be the first line in a template, It essentially says to use this template "base.twig" as of the main structure of my page and this current page "index.twig" is going to fill the blocks established in the main structure
#}
{% block page_title %}List of Questions - {% endblock %}
{% block main_content %}
    {# The content in here will replace the content block found inside of "base.twig" #}
<div class="py-5 text-center" style="	background-image: url(&quot;assets/cover-bubble-dark.svg&quot;);	background-position: top left;	background-size: cover;	background-repeat: repeat;">
    <div class="container bg-white">
        <div class="row mt-4">
            <div class="col-12">
                <h2>List All Questions</h2>
            </div>                  
            <div class="table-responsive col-12">
            <a  href="question.php?mode=create"><i class="fa fa-user fa-fw"></i>Add new Question</a>
                <table class="table table-hover table-striped table-bordered">
                    <thead class="thead-dark">                   
                        <tr class="text-nowrap">
                            <th class="text-center">#</th>
                            <th class="text-center">Subject</th>
                            <th class="text-center">Question</th>
                            <th class="text-center"></th>
                        </tr>
                    </thead>
                    <tbody>
                            {% for question in questions %}
                        <tr>
                            <td>{{ question.quId }}</td>
                            <td>{{ question.subName }}</td>
                            <td>{{ question.quName }}</td>  
                            <td class = "text-nowrap">
                                <a href="question.php?id={{ question.quId }}&mode=viewAndEdit">View and Edit</a> | 
                                <a href="question.php?id={{ question.quId }}&mode=delete">Delete</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12"><a class="btn btn-outline-primary" href="#">Print&nbsp;<i class="fa fa-fw fa-print"></i> </a></div>
        </div>
    </div>
</div>
{% endblock %}