{% extends "main.twig" %}
{# THIS IS A TWIG COMMENT
	the line above MUST be the first line in a template, It essentially says to use this template "base.twig" as of the main structure of my page and this current page "index.twig" is going to fill the blocks established in the main structure
#}
{% block page_title %}Question Edit - {% endblock %}
{% block main_content %}
    {# The content in here will replace the content block found inside of "base.twig" #}
    <div class="py-5 text-center" style=" background-image: url(&quot;assets/cover-bubble-dark.svg&quot;);	background-position: top left;	background-size: cover;	background-repeat: repeat;">
        <div class="container bg-white">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="">Question Content</h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
            <div class="col-md-12">
                <form class="text-left">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend"><span class="input-group-text" id="basic-addon1">Question</span></div>
                            <input type="text" class="form-control" id="inlineFormInputGroup" name="question" placeholder="Question" value={{ question_editing.quName }} >
                        </div>
                    </div>

                    {% for option_editing in options_editing  %} 
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text" id="basic-addon1"><input type="checkbox" aria-label="Checkbox for following text input"></div>
                            </div>
                            <input type="text" class="form-control" id="inlineFormInputGroup" name ="option{{loop.index}}" placeholder="Answer{{loop.index}}" value={{ option_editing.quOption }}>
                        </div>
                    </div>
                    {% endfor %}
               
                    <button type="submit" class="btn btn-primary mb-2">Update</button>
                </form>
            </div>
        </div>
            <div class="row justify-content-md-center">
                <div class="col-md-8">
                    <form class="text-left">
                        <ul class="list-group">
                            <li class="list-group-item" ><button type="button" class="btn btn-info">Question</button> {{ question_editing.quName }}</li>
                            {% for option_editing in options_editing  %}                                                   
                            <li {% if option_editing.quAnswer=='0' %}class="list-group-item"{% else %}class="list-group-item active"
                             {% endif %} ><button type="button" class="btn btn-info">{% if option_editing.quAnswer=='0' %} Option  {% else %} Answer 
                             {% endif %}</button>  {{ option_editing.quOption }}</li>
                            {% endfor %}
                            <li class="list-group-item" ><button type="button" class="btn btn-info">Subject</button> {{ question_editing.subName }}</li>
                            <li class="list-group-item" ><button type="button" class="btn btn-info">Type</button> {% if question_editing.quType=='sql' %}Single Choice 
                            {% else %}Multiple Choices{% endif %}</li>
                        </ul>                        
                         <a class="btn btn-sm btn-warning pull-left" href="question.php?id={{ question_editing.quId }}&mode=edit">Edit</a></h2>
                         <a class="btn btn-sm btn-primary pull-left" href="question.php?id={{ question_editing.quId }}&mode=delete">Delete</a></h2>
                         <a class="btn btn-sm btn-secondary pull-left" href="question.php?id=0&mode=create">Add a new question</a></h2>
                         <a class="btn btn-sm btn-info pull-left" href="question.php?id=0&&mode=list">Back to list</a></h2>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}